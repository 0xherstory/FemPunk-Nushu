# Web3 Configuration
# Get free project ID from: https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Get free API key from: https://www.alchemy.com/ (optional, fallback to public RPCs)
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key

# Liveblocks Configuration
NEXT_PUBLIC_LIVEBLOCKS_PUBLIC_KEY=your_liveblocks_public_key
LIVEBLOCKS_SECRET_KEY=your_liveblocks_secret_key

# Smart Contract Addresses (Sepolia Testnet)
NEXT_PUBLIC_COLOR_NFT_CONTRACT_ADDRESS=0x...
NEXT_PUBLIC_ARTWORK_NFT_CONTRACT_ADDRESS=0x...
NEXT_PUBLIC_REVENUE_CONTRACT_ADDRESS=0x...

# IPFS Configuration
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_key

# Database (Optional - for caching and analytics)
DATABASE_URL=postgresql://...

# Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-...

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development