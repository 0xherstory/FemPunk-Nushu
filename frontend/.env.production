# 生产环境配置
NODE_ENV=production

# 应用配置
NEXT_PUBLIC_APP_NAME="FemPunk NüShu"
NEXT_PUBLIC_APP_URL=https://fempunk-nushu.vercel.app
NEXT_PUBLIC_APP_VERSION=1.0.0

# Web3 配置 - 主网
NEXT_PUBLIC_CHAIN_ID=1
NEXT_PUBLIC_RPC_URL_MAINNET=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
NEXT_PUBLIC_RPC_URL_BACKUP=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# 智能合约地址 - 主网部署后更新
NEXT_PUBLIC_COLOR_NFT_CONTRACT=0x...
NEXT_PUBLIC_ARTWORK_CONTRACT=0x...
NEXT_PUBLIC_MARKETPLACE_CONTRACT=0x...

# Liveblocks 生产环境
NEXT_PUBLIC_LIVEBLOCKS_PUBLIC_KEY=pk_prod_...
LIVEBLOCKS_SECRET_KEY=sk_prod_...

# 监控和分析
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...
SENTRY_ORG=fempunk
SENTRY_PROJECT=nushu-platform
SENTRY_AUTH_TOKEN=...

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=...

# 性能监控
NEXT_PUBLIC_WEB_VITALS_ATTRIBUTION=true

# IPFS 配置
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/
PINATA_API_KEY=...
PINATA_SECRET_API_KEY=...

# 数据库 (如果使用)
DATABASE_URL=postgresql://...

# Redis 缓存 (如果使用)
REDIS_URL=redis://...

# 邮件服务 (如果需要)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=...
SMTP_PASS=...

# 安全配置
NEXTAUTH_SECRET=...
NEXTAUTH_URL=https://fempunk-nushu.vercel.app

# 第三方服务
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-...
NEXT_PUBLIC_HOTJAR_ID=...

# 功能开关
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_MAINTENANCE_MODE=false